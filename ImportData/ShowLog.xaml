<Window x:Class="Ecm.ImportData.ShowLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowLog" Height="300" Width="371" WindowStartupLocation="CenterOwner">
    <Grid>
        <ComboBox Name="cmbFileName" HorizontalAlignment="Left" Margin="92,14,0,0" VerticalAlignment="Top" Width="190" 
                  DisplayMemberPath="Name" 
            SelectedValuePath="FullName" 
                  SelectionChanged="ComboBox_SelectionChanged"/>
        <RichTextBox Name="rtfValue" Margin="10,50,10,10">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Content="File Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="77"/>

    </Grid>
</Window>
