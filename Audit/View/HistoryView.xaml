                                    </Button.ContentTemplate>
                                </Button>
                                <Button Grid.Column="1" VerticalAlignment="Center" Margin="5"
                                        Command="{Binding Path=ResetSearchConditionCommand}">
                                    <Button.ContentTemplate>
