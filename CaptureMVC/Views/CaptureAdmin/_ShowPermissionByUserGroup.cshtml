  <div class="admin_sub_menu_items">
        @{
            var userGroupNumber = 1;
            foreach (var userGroupItem in Model.ListUserGroup)
            {
        <div class="sub_menu_item" id="@userGroupItem.Id">
            <div class="permission_menu_item" title="@userGroupItem.Name">
                <span>@userGroupItem.Name</span>
            </div>
        </div>
        <div class="permission_sub_menu" style="display:none">
            @{
                foreach (var docTypeItem in Model.ListBatchTypeModel)
                {
                    <div class="permission_sub_menu_item sub_menu_item_by_user_group" id="@docTypeItem.Id">
                        <div class="content data">
                            <div class="data_content" title="@docTypeItem.Name">
                                @docTypeItem.Name
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
                userGroupNumber++;
            }
        }
    </div>

