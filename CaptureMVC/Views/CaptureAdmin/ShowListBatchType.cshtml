            {
                <div class="add_delete_barcode_icon" title="Delete barcode" data-id="@item.Value.Id" data-contenttype_name="@item.Value.Name"></div>
            }
                        </div>*@
                    </div>
                </div>
            }
        }
    </div>

    <div class="panel_button row">
        <button type="button" id="button_add_batch" class="btn btn-primary pull-left">
            <span>Add</span>
            <i class="glyphicon glyphicon-plus"></i>
        </button>
        <button type="button" id="button_delete_batch" class="btn btn-primary pull-right">
            <span>Delete</span>
            <i class="glyphicon glyphicon-trash"></i>
