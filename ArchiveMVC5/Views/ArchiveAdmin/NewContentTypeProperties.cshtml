@model ArchiveMVC5.Models.ArchiveAdminModel
@Scripts.Render("~/Scripts/Ecm.js")
@{
    ViewBag.Title = "ContentTypeProperties";
}
<div class="sub_properties_content">
    <div class="box box-success padding-3">
        <div class="box-header with-border">
            <h4>Content type properties</h4>
        </div>
        <form action="#" method="post" enctype="multipart/form-data" name="form1" id="form1">
            <div class="box-body h80">
                <div class="form-group">
                    @Html.LabelFor(model => Model.ArchiveDocTypeModel.Name, new { @class = "label-control" })<span class="required">*</span>
                    @Html.TextBoxFor(model => model.ArchiveDocTypeModel.Name, new {  id = "content_name", @class = "form-control input-sm validate" })
                    @Html.ValidationMessageFor(model => model.ArchiveDocTypeModel.Name)
                </div>
                <div class="form-group">
                    @Html.CheckBoxFor(model => model.ArchiveDocTypeModel.IsOutlook, new { id = "outlook_import" })
                    @Html.LabelFor(model => Model.ArchiveDocTypeModel.IsOutlook, new { id = "outlook_import", @class = "label-control" })
                </div>
                <table id="table_fields" class="table table-hover">
                    <caption>
                        <h4>Index fields</h4>
                    </caption>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Required</th>
                            <th>Restricted</th>
                            <th>Has lookup</th>
                            <th>Default value</th>
                            <th>Max lenght</th>
                            <th>Lookup</th>
                            <th class="hidden"></th>
                            <th class="hidden"></th>
                        </tr>
                    </thead>
                    <tbody id="table_fields_body">
                    </tbody>
                </table>
                <div class="btn-group pull-right">
                    <button type="button" id="button_add_field" class="btn bg-olive btn-sm margin">
                        <i class="glyphicon glyphicon-plus" />
                        <span>Add  </span>
                    </button>
                    <button type="button" id="button_edit_field" class="btn bg-olive btn-sm margin">
                        <i class="glyphicon glyphicon-edit"></i>
                        <span>Edit  </span>
                    </button>
                    <button type="button" id="button_delete_field" class="btn bg-olive btn-sm margin">
                        <i class="glyphicon glyphicon-trash"></i>
                        <span>Delete  </span>
                    </button>
                </div>
            </div>
            <div class="box-footer">
                <div class="btn-group pull-right">
                    <button type="button" id="button_save_content" class="btn bg-olive btn-flat margin">
                        <i class="glyphicon glyphicon-save"></i>
                        <span>Save  </span>
                    </button>
                    <button type="button" id="button_cancel_content" class="btn bg-olive btn-flat margin">
                        <i class="glyphicon glyphicon-remove"></i>
                        <span>Close  </span>
                    </button>
                </div>
            </div>
        </form>

    </div>

</div>
<script>
    $("#content_name").focus();
</script>
