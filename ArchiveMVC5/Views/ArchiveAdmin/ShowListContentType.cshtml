@model ArchiveMVC5.Models.ArchiveAdminModel
@{
    ViewBag.Title = "ContentTypes";
}

<style>

.container {
    padding-right: 1px !important;
    padding-left: 1px !important;
    width:100% !important;
}

#content-type-list > div > div >.info-box {
    margin-bottom: 0px !important;
    margin-top: 1px !important;
    border-bottom:solid #ff5200 1px !important;
    border-left:solid 3px transparent !important;
    background-color:#3d9970 !important;
}

#content-type-list > div > div .info-box:hover, #content-type-list > div > div .info-box.active {
    border-left:solid 3px #ff5200 !important;
}

#content-type-list > div > div > div > .info-box-content {
    padding: 10px;
    margin-left: 90px;
    background-color: #FFF;
    height:90px;
}

h1, .h1, h2, .h2, h3, .h3, h4,.h4, h5, .h5 {
    margin-top: 0px;
    margin-bottom: 0px;
}
#content-type-list > .box-body {
    padding:1px !important;
    overflow-y:auto;
    overflow-x:hidden;
}

#content-type-list > .box-footer {
    padding:1px !important;
}

</style>

<div class="sub_properties_list">
<div class="box box-success h100" id="content-type-list">
    <div class="box-header with-border">
        <h4> Content types </h4>
    </div>
    <div class="box-body">
        <div class="submenu-list">
        @{
            foreach (var item in Model.ListDocType)
            {
            <div class="info-box content_sub_menu_item hand" id="@item.Value.Id">
                <span class="info-box-icon bg-olive content_type_item"><i class="fa fa-file-o" style="padding-top:20px"></i></span>
                <div class="info-box-content">
                    <div class="info-box-text hastooltip content-type-name"><h5><b>@item.Value.Name</b></h5></div>
                    <div class="info-box-text">
                        <div class="col-sm-12 no-padding">
                            <div class="col-sm-8 no-padding"> OCR Template </div>
                            <div class="col-sm-2 no-padding"><a href="#"><i class="fa fa-cog hand"></i></a></div>
                            @*"@Url.Action("Configure", "ArchiveAdmin")?id=@item.Value.Id" class="ocr_template"*@
                            <div class="col-sm-2 no-padding">
                                @if (item.Value.HasOCRTemplateDefined) 
                                {
                                    <i class="delete_ocr glyphicon glyphicon-trash hand" data-id="@item.Value.Id" data-contenttype_name="@item.Value.Name"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="info-box-text">
                        <div class="col-sm-12 no-padding">
                            <div class="col-sm-8 no-padding">Barcode</div>
                            <div class="col-sm-2 no-padding"><i class="fa fa-barcode hand barcode_config"  data-id="@item.Value.Id"></i></div>
                            <div class="col-sm-2 no-padding barcode-delete">
                                @if (item.Value.HasBarcodeConfigurations)
                                {
                                    <i class="glyphicon glyphicon-trash hand barcode_config_delete" data-id="@item.Value.Id" data-contenttype_name="@item.Value.Name"></i>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.info-box-content -->
            </div>         
            }
        }
            </div>
    </div>
    <div class="box-footer">
    <div class="btn-group pull-right">
        <button type="button" class="btn bg-olive margin-5" id="addContentType">
            <i class="glyphicon glyphicon-plus"></i>
            <span>  Add  </span>
        </button>
        <button type="button" class="btn bg-olive margin-5" id="deleteContentType">
            <i class="glyphicon glyphicon-trash"></i>
            <span>  Delete  </span>
        </button>
    </div>
    </div>
</div>
</div>
