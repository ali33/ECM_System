@model IList<ArchiveMVC5.Models.UserModel>
@{
    ViewBag.Title = "ShowUser";
}
<style>
    .container {
        padding-right: 1px !important;
        padding-left: 1px !important;
        width: 100% !important;
    }

    #user-list > div > div > .info-box {
        margin-bottom: 0px !important;
        margin-top: 1px !important;
        border-bottom: solid #ff5200 1px !important;
        border-left: solid 3px transparent !important;
        background-color: #3d9970 !important;
    }

    #user-list > div > div .info-box:hover, #user-list > div > div .info-box.active {
        border-left: solid 3px #ff5200 !important;
    }

    #user-list > div > div > div > .info-box-content {
        padding: 10px;
        margin-left: 90px;
        background-color: #FFF;
        height: 90px;
    }

    h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5 {
        margin-top: 0px;
        margin-bottom: 0px;
    }

    #user-list > .box-body {
        padding: 1px !important;
        overflow-y: auto;
        overflow-x: hidden;
    }

    #user-list > .box-footer {
        padding: 1px !important;
    }
</style>
<div class="sub_properties_list">

    <div class="box box-success" id="user-list">
        <div class="box-header with-border">
            <h4>Users </h4>
        </div>
        <div class="box-body">
            <div class="submenu-list">
                @{
                    foreach (var userItem in Model)
                    {
                    <div class="info-box user_sub_menu_item hand" id="@userItem.Id">
                        <div class="info-box-icon bg-olive">
                            @if (userItem.Picture != null)
                            {
                                <div class="image">
                                    <img src="~/ArchiveAdmin/GetImageFromCacheByKey?Key=@userItem.Id.ToString()" width="75" height="75" class="img-circle" style="margin-top:10px"/>
                                </div>
                            }
                            else
                            {
                                <div class="image">
                                    <i class="fa fa-user" style="padding-top: 20px"></i>
                                </div>
                            }
                        </div>
                        <div class="info-box-content">
                            <div class="info-box-text user-name"><span>@userItem.Username</span></div>
                            <div class="info-box-text full-name"><span>@userItem.Fullname</span></div>
                        </div>
                    </div>
                    }
                }
            </div>
        </div>
        <div class="box-footer">
            <div class="btn-group pull-right">
                <button type="button" id="user_button_add" class="btn btn-flat bg-olive margin">
                    <i class="glyphicon glyphicon-plus"></i>
                    <span>Add  </span>
                </button>
                <button type="button" id="user_button_delete" class="btn btn-flat bg-olive margin">
                    <i class="glyphicon glyphicon-trash"></i>
                    <span>Delete  </span>
                </button>
            </div>
        </div>
    </div>
</div>
