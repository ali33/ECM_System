    <div class="row">
        <div class="form-group col-md-12">
            <span class="control-label">Saved queries</span>
            <select class="form-control input-sm" id="selectqueryname">
                <option value="-1">--- Select query ---</option>
                @if (Model.ListQueryModel != null && Model.ListQueryModel.Count > 0)
                {
                    foreach (ArchiveMVC5.Models.SearchQueryModel item in Model.ListQueryModel)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="row search_condition" id="searchcondition">
        @Html.Partial("AdvanceSearchCondition", new ArchiveMVC5.Models.SearchQueryModel{ DocumentType = Model.ListDocType.SingleOrDefault(p=> p.Id == Model.DocumentTypeId)})
    </div>
