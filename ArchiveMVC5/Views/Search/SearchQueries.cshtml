@model ArchiveMVC5.Models.SearchModel
@*@section script
{
    <script src="~/Scripts/jquery-2.1.4.js" type="text/javascript"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.min.js"  type="text/javascript"></script>
    <script src="~/Content/dist/js/app.js"  type="text/javascript"></script>
    <script src="~/Scripts/Pages/Search.js" type="text/javascript"></script>    
    <script src="~/Scripts/load.js" type="text/javascript"></script>
